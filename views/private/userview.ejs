<div class="row">
  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <h1>List of Users</h1>
  </div>
  
    
   <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
	  <div class="table-responsive">
		<table ng-table="tableConfigParam" class="table table-condensed table-bordered table-striped">
			<colgroup>
			  <col width="20%" />
			  <col width="15%" />
			  <col width="15%" />
			  <col width="20%" />
			  <col width="25%" />
			  <col width="15%" />
			</colgroup>
			<tr ng-repeat="row in $data" ng-form="rowForm" demo-tracked-table-row="row">
				<td data-title="'Name'" filter="{'fullname':'text'}" sortable="'fullname'">{{row.fullname}}</td>
				<td data-title="'Role'" filter="{'role':'text'}" sortable="'role'">{{row.role}}</td>
				<td data-title="'Projects Access'" filter="{'projects':'text'}" sortable="'projects'">{{row.projects}}</td>
				<td><a href="#" ng-click="openEditInfo(row)"><span class="glyphicon glyphicon-edit"></span></a></td>
		  </tr>
		</table>
	  </div>
   </div>
  
</div>

 <script type="text/ng-template" id="userDetails.html">
	<div class="modal-header">
		<h3 class="modal-title">User : {{user.local.firstname}}</h3>
	</div>
	<div class="modal-body">
		<form>
			
			 <div class="form-group">
				<label class="control-label" for="fullname">Name</label>
				<div>
				  <input type="text" disabled class="form-control ng-pristine ng-valid ng-touched" ng-model="user.fullname" id="fullname" placeholder="Fullname" value="user.fullname">
				</div>
			 </div>
			 <div class="form-group">
				<label class="control-label" for="role">Role :</label>
				<div>				  
					<select class="form-control ng-pristine ng-valid ng-touched" id="multipleSelect" ng-model="user.role" ng-options="r for r in roleList"></select>	
				</div>
			 </div>
			 <div class="form-group">
				<label class="control-label" for="multipleSelect">Projects : {{user.projects}}</label>
				<div>
					<select class="form-control ng-pristine ng-valid ng-touched" id="multipleSelect" multiple="true" ng-model="user.projects" ng-options="project.projectname+' ('+project._id+')' for project in projectList"></select>
				    <!-- select class="form-control ng-pristine ng-valid ng-touched" name="multipleSelect" id="multipleSelectProject" ng-model="user.projects" multiple>
					  <option ng-repeat="project in projectList" value="{{project}}">{{project}}</option>
					</select -->	
				</div>
			 </div>
			 
		</form>
		
	</div>
	<div class="modal-footer">
		<button class="btn btn-primary" type="button" ng-click="save()">Save</button>
		<button class="btn btn-warning" type="button" ng-click="cancel()">Cancel</button>
	</div>
</script>



